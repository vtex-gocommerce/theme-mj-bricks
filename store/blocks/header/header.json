{
  "header": {
    "blocks": [
      "header-layout.desktop",
      "header-layout.mobile"
    ]
  },
  "header.full": {
    "blocks": [
      "header-layout.desktop",
      "header-layout.mobile"
    ]
  },
  "header-layout.desktop": {
    "children": [
      "header-row#2-desktop",
      "header-row#4-desktop"
    ]
  },

  "logo.auto-image": {
    "props": {
      "title": "logo",
      "href": "/",
      "width": 107,
      "url": "https://static.gocommerce.com/{{account}}/assets/gocommerce/png/logo.png"
    }
  },

  "login#mobile": {
    "props": {
      "showIconProfile": true
    }
  },

  "header-row#1-desktop": {
    "children": [
      "telemarketing"
    ],
    "props": {
      "fullWidth": true
    }
  },

  "header-row#2-desktop": {
    "children": [
      "notification.bar#home"
    ],
    "props": {
      "fullWidth": "true"
    }
  },
  "notification.bar#home": {
    "props": {
      "content": "Todas as nossas peças são feitas artesanalmente     •     Enviamos para todo o brasil através dos Correios"
    }
  },
  "header-row#3-desktop": {
    "children": [
      "vtex.menu@2.x:menu#websites",
      "header-spacer",
      "vtex.menu@2.x:menu#institutional"
    ],
    "props": {
      "blockClass": "menu-link",
      "inverted": "true"
    }
  },
  "header-row#4-desktop": {
    "children": [
      "logo.auto-image",
      "category-menu",
      "header-spacer",
      "header-spacer",
      "search-bar",
      "locale-switcher",
      "login",
      "minicart.v2"
    ],
    "props": {
      "sticky": true,
      "blockClass": "main-header"
    }
  },

  "search-bar#mobile": {
    "props": {
      "compactMode": false
    }
  },

  "category-menu": {
    "children": [],
    "props": {
      "showAllDepartments": false
    }
  },

  "logo#desktop": {
    "props": {
      "title": "Logo",
      "href": "/",
      "url": "https://storecomponents.vteximg.com.br/arquivos/store-theme-logo.png",
      "width": "180"
    }
  },

  "header-layout.mobile": {
    "children": [
      "header-row#1-mobile",
      "header-row#2-mobile"
    ]
  },
  "header-row#1-mobile": {
    "children": [
      "drawer",
      "logo.auto-image",
      "header-spacer",
      "login#mobile",
      "minicart.v2"
    ],
    "props": {
      "sticky": true,
      "blockClass": "main-header-mobile"
    }
  },

  "header-row#2-mobile": {
    "children": [
      "search-bar#mobile"
    ]
  },


  "drawer": {
    "children": [
      "category-menu"
    ]
  },

  "menu#drawer": {
    "children": [
      "menu-item#category-clothing",
      "menu-item#category-decoration",
      "menu-item#custom-sale"
    ],
    "props": {
      "orientation": "vertical"
    }
  },

  "minicart.v2": {
    "children": ["minicart-base-content"]
  },
  "minicart-base-content": {
    "blocks": ["minicart-product-list", "minicart-summary", "minicart-empty-state"]
  },

  "minicart-product-list": {
    "blocks": ["product-list"]
  },

  "minicart-summary": {
    "blocks": ["checkout-summary.compact"]
  },

  "checkout-summary.compact": {
    "children": ["summary-totalizers#minicart"],
    "props": {
      "totalizersToShow": ["Items", "Discounts"]
    }
  },
  "summary-totalizers#minicart": {
    "props": {
      "showTotal": true,
      "showDeliveryTotal": false
    }
  },
  "minicart-empty-state": {
    "children": ["rich-text#empty-state"]
  },
  "rich-text#empty-state": {
    "props": {
      "text": "Seu carrinho está vazio!"
    }
  },

  "logo#mobile": {
    "props": {
      "title": "Logo",
      "href": "/",
      "url": "https://storecomponents.vteximg.com.br/arquivos/store-theme-logo-mobile.png",
      "width": "70"
    }
  }
}
